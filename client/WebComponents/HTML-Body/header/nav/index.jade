include ../../modal/subscribe
include ../../modal/search

nav.navbar.navbar-default.navbar-fixed-top
    .container.dropdown
        .navbar-header
            button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar"
                aria-expanded="false" aria-controls="navbar")
                span.sr-only Toggle navigation
                each bar in [1,2,3]
                    span.icon-bar
            a.navbar-brand(href="/") Project name

        .navbar-collapse.collapse(id="navbar")
            ul.nav.navbar-nav.navbar-right
                li.visible-xs

                li.dropdown
                    a.dropdown-toggle(href="#" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false")
                        |Sub-Topics
                        span.caret
                    ul.dropdown-menu
                        each sub in ['Summary','Beginner', 'Intermediate', 'Advanced']
                            li
                                a(href="/")
                                    =sub
                li.dropdown-block
                    a.dropdown-toggle(href="#" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false")
                        |Topics
                        span.caret
                    .dropdown-menu
                        .container-fluid
                            h3 Topics
                            .row
                                each col in [1,2,3,4]
                                    .col-md-3.col-sm-6
                                        ul.list-unstyled
                                            each item in ['Topic 1', 'Topic 2', 'Topic 3', 'Topic 4', 'Topic 5']
                                                li
                                                    a(href="#")= item
                                .clearfix
                li.dropdown-block
                    a.dropdown-toggle(href="#" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false")
                        | Tools
                        span.caret
                    .dropdown-menu
                        .container-fluid
                            h3 Tools
                            .row
                                each col in ['Tool 1','Tool 2','Tool 3','Tool 4']
                                    .col-md-3.col-sm-6
                                        ul.list-unstyled
                                            li
                                                a(href="#")= col
                                .clearfix
                li
                    a(href="#" data-toggle="modal" data-target="#subscribe") Subscribe
                li.dropdown.visible-xs
                    a.dropdown-toggle(href="#" data-toggle="dropdown" role="button"
                        aria-haspopup="true" aria-expanded="false" )
                        |Connect
                        span.caret
                    ul.dropdown-menu.list-inline
                        li
                            a(href="")
                                i.fa.fa-facebook-f
                        li
                            a(href="")
                                i.fa.fa-twitter
                        li
                            a(href="")
                                i.fa.fa-linkedin
                li.hidden-xs
                    a(href="#")
                        i.fa.fa-facebook-f
                li.hidden-xs
                    a(href="#")
                        i.fa.fa-twitter
                li.hidden-xs
                    a(href="#")
                        i.fa.fa-linkedin
                li
                    a(href="#" data-toggle="modal" data-target="#search")
                        i.fa.fa-search
            .clearfix